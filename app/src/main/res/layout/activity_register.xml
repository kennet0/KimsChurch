<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교인정보"
            android:textSize="30dp"
            android:layout_gravity="center"
            >
        </TextView>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <!-- 이름 입력 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="20dp"
                android:layout_weight="5"
                >
            </TextView>
            <EditText
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                >
            </EditText>
            <Button
                android:id="@+id/btnImage"
                android:text="Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                >

            </Button>
        </LinearLayout>

        <!--직분 라디오-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="직분"
            android:textSize="20dp"
            android:layout_marginTop="20dp">
        </TextView>
        <RadioGroup
            android:id="@+id/rgPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <RadioButton
                android:id="@+id/rbLayman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="성도"
                android:onClick="radioCheck"
                android:layout_weight="25"/>

            <RadioButton
                android:id="@+id/rbDecon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="집사"
                android:onClick="radioCheck"
                android:layout_weight="25"/>

            <RadioButton
                android:id="@+id/rbSeniorDecon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="권사"
                android:onClick="radioCheck"
                android:layout_weight="25"/>
            <RadioButton
                android:id="@+id/rbElder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장로"
                android:onClick="radioCheck"
                android:layout_weight="25"/>
        </RadioGroup>

        <!-- 부서 성별 라디오 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="50">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="부서"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp">
                </TextView>
                <RadioGroup
                    android:id="@+id/rgDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="50">
                    <RadioButton
                        android:id="@+id/rbYouth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="청년"
                        android:checked="true"
                        android:onClick="radioCheck"
                        android:layout_weight="25"/>
                    <RadioButton
                        android:id="@+id/rbSenior"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="장년"
                        android:onClick="radioCheck"
                        android:layout_weight="25"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="50">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp">
                </TextView>
                <RadioGroup
                    android:id="@+id/rgSex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="50">
                    <RadioButton
                        android:id="@+id/rbMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남"
                        android:checked="true"
                        android:onClick="radioCheck"
                        android:layout_weight="25"/>
                    <RadioButton
                        android:id="@+id/rbFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여"
                        android:onClick="radioCheck"
                        android:layout_weight="25"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <!-- 직책 라디오 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="직책"
            android:textSize="20dp"
            android:layout_marginTop="20dp">
        </TextView>
        <RadioGroup
            android:id="@+id/rgPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="60">
            <RadioButton
                android:id="@+id/rbMinister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="임원"
                android:onClick="radioCheck"
                android:layout_weight="20"/>

            <RadioButton
                android:id="@+id/rbLeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목자"
                android:onClick="radioCheck"
                android:layout_weight="20"/>

            <RadioButton
                android:id="@+id/rbMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예원"
                android:checked="true"
                android:onClick="radioCheck"
                android:layout_weight="20"/>

        </RadioGroup>

        <!-- 전화번호 입력 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textSize="20dp"
                android:layout_weight="5"
                >
            </TextView>
            <EditText
                android:id="@+id/txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="예)01012341234"
                android:layout_weight="95"
                >
            </EditText>
        </LinearLayout>

        <!--사랑방 입력-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사랑방"
            android:textSize="20dp"
            android:layout_marginTop="20dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="50">
            <EditText
                android:id="@+id/txtSRBName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:hint="사랑방이름">
            </EditText>

            <EditText
                android:id="@+id/txtSRBLeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:hint="목자이름">
            </EditText>
        </LinearLayout>

    <!--    섬김      -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="섬김"
                android:textSize="20dp"
                android:layout_weight="5"
                >
            </TextView>
            <EditText
                android:id="@+id/txtWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="95"
                >
            </EditText>
        </LinearLayout>

        <!-- 생년월일 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textSize="20dp"
                android:layout_weight="5"
                >
            </TextView>
            <EditText
                android:id="@+id/txtBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:inputType="date"
                android:hint="예) 19881121"
                >
            </EditText>
            <RadioGroup
                android:id="@+id/rgBirthdayCal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="30">
                <RadioButton
                    android:id="@+id/rbSunCalander"
                    android:text="양"
                    android:onClick="radioCheck"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    />
                <RadioButton
                    android:onClick="radioCheck"
                    android:id="@+id/rbLunarCalander"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="음"/>

            </RadioGroup>
        </LinearLayout>

        <!-- 가족관계 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가족관계"
            android:textSize="20dp"
            android:layout_marginTop="20dp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
           <AutoCompleteTextView
               android:id="@+id/txtFamily_parent"
               android:hint="부모"
               android:layout_width="70dp"
               android:layout_height="wrap_content"
               android:layout_weight="20"/>
            <AutoCompleteTextView
                android:id="@+id/txtFamily_couple"
                android:hint="부부"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"/>
            <AutoCompleteTextView
                android:id="@+id/txtFamily_sibling"
                android:hint="형제"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"/>
            <AutoCompleteTextView
                android:id="@+id/txtFamily_child"
                android:hint="자식"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"/>
            <AutoCompleteTextView
                android:id="@+id/txtFamily_etc"
                android:hint="기타"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"/>


        </LinearLayout>

        <!--특이사항-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="특이사항"
                android:textSize="20dp"
                android:layout_weight="5"
                >
            </TextView>
            <EditText
                android:id="@+id/txtEtc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="95"
                >
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="확인">
        </Button>

        <Button
            android:id="@+id/btnRemove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="삭제">
        </Button>
    </LinearLayout>
</ScrollView>