<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교인 입력"
            android:textSize="30dp"
            android:layout_gravity="center">
        </TextView>

        <!-- 이름 입력 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="20dp"
                android:layout_weight="5"
                >
            </TextView>
            <EditText
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="95"
                >
            </EditText>
        </LinearLayout>

        <!--직분 라디오-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="직분"
            android:textSize="20dp"
            android:layout_marginTop="20dp">
        </TextView>
        <RadioGroup
            android:id="@+id/txtPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성도"
                android:layout_weight="25">
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="집사"
                android:layout_weight="25">
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="권사"
                android:layout_weight="25">
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장로"
                android:layout_weight="25">
            </RadioButton>
        </RadioGroup>

        <!-- 부서 라디오 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="부서"
            android:textSize="20dp"
            android:layout_marginTop="20dp">
        </TextView>
        <RadioGroup
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="50">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="청년"
                android:layout_weight="25">
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장년"
                android:layout_weight="25">
            </RadioButton>
        </RadioGroup>

        <!-- 직책 라디오 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="직책"
            android:textSize="20dp"
            android:layout_marginTop="20dp">
        </TextView>
        <RadioGroup
            android:id="@+id/part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="60">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="임원"
                android:layout_weight="20">
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목자"
                android:layout_weight="20">
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예원"
                android:layout_weight="20">
            </RadioButton>
        </RadioGroup>

        <!-- 전화번호 입력 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textSize="20dp"
                android:layout_weight="5"
                >
            </TextView>
            <EditText
                android:id="@+id/txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="예)01012341234"
                android:layout_weight="95"
                >
            </EditText>
        </LinearLayout>

        <!--사랑방 입력-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사랑방"
            android:textSize="20dp"
            android:layout_marginTop="20dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="50">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:hint="사랑방이름">
            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:hint="목자이름">
            </EditText>
        </LinearLayout>

    <!--    섬김      -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="섬김"
                android:textSize="20dp"
                android:layout_weight="5"
                >
            </TextView>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="95"
                >
            </EditText>
        </LinearLayout>

        <!-- 생년월일 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textSize="20dp"
                android:layout_weight="5"
                >
            </TextView>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="95"
                android:inputType="date"
                android:hint="예) 19881121"
                >
            </EditText>
        </LinearLayout>

        <!-- 가족관계 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가족관계"
            android:textSize="20dp"
            android:layout_marginTop="20dp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부"
                android:layout_weight="20">
            </CheckBox>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모"
                android:layout_weight="20">
            </CheckBox>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="형제"
                android:layout_weight="20">
            </CheckBox>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타"
                android:textSize="15dp"
                >
            </TextView>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40">
            </EditText>
        </LinearLayout>

        <!--특이사항-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="특이사항"
                android:textSize="20dp"
                android:layout_weight="5"
                >
            </TextView>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="95"
                >
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="확인">
        </Button>
    </LinearLayout>
</ScrollView>